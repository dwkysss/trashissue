<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Foto Profil -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_settings_24"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background" />

        <!-- Nama -->
        <TextView
            android:id="@+id/fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dwiky SumarlÄ±n"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <!-- Username -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dwiky_smrln"
            android:textColor="#888888"
            android:layout_marginBottom="16dp"/>

        <!-- Tombol Edit -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:backgroundTint="#2e7d32"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"/>

        <!-- Menu Profil -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/menuPengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengaturan"
                android:textSize="16sp"
                android:drawableStart="@drawable/baseline_settings_24"
                android:drawablePadding="16dp"
                android:padding="12dp" />

            <TextView
                android:id="@+id/menuKegiatanku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kegiatanku"
                android:textSize="16sp"
                android:drawableStart="@drawable/baseline_settings_24"
                android:drawablePadding="16dp"
                android:padding="12dp" />

            <TextView
                android:id="@+id/menuDonasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kantong Donasi"
                android:textSize="16sp"
                android:drawableStart="@drawable/baseline_settings_24"
                android:drawablePadding="16dp"
                android:padding="12dp" />

            <TextView
                android:id="@+id/menuBookmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bookmark"
                android:textSize="16sp"
                android:drawableStart="@drawable/baseline_settings_24"
                android:drawablePadding="16dp"
                android:padding="12dp" />

            <TextView
                android:id="@+id/menuShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textSize="16sp"
                android:drawableStart="@drawable/baseline_settings_24"
                android:drawablePadding="16dp"
                android:padding="12dp" />

            <TextView
                android:id="@+id/menuAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About us"
                android:textSize="16sp"
                android:drawableStart="@drawable/baseline_settings_24"
                android:drawablePadding="16dp"
                android:padding="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
